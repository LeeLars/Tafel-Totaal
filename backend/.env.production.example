# ===========================================
# PRODUCTION ENVIRONMENT VARIABLES
# Copy this to Railway environment variables
# ===========================================

NODE_ENV=production
PORT=3000

# Database - Railway provides this automatically
DATABASE_URL=postgresql://user:password@host:port/database

# JWT - CHANGE THIS to a secure random string!
JWT_SECRET=generate-a-secure-random-string-min-32-chars
JWT_EXPIRES_IN=7d

# URLs - Update with your actual domains
FRONTEND_URL=https://your-site.netlify.app
BACKEND_URL=https://your-backend.up.railway.app

# CORS - Include all frontend origins (comma-separated)
CORS_ALLOWED_ORIGINS=https://your-site.netlify.app,https://www.tafeltotaal.be

# Cookie settings for cross-domain auth
# For Railway + Netlify: use 'none' and leave COOKIE_DOMAIN empty
COOKIE_SAMESITE=none
# COOKIE_DOMAIN=

# Mollie Payment
MOLLIE_API_KEY=live_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
MOLLIE_WEBHOOK_URL=https://your-backend.up.railway.app/api/webhooks/mollie

# Email (Resend) - Optional, leave empty to disable
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
EMAIL_FROM=Tafel Totaal <noreply@tafeltotaal.be>

# Cloudinary - Optional, leave empty to skip image uploads
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
